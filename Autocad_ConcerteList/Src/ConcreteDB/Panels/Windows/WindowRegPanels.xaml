<Window x:Class="Autocad_ConcerteList.ConcreteDB.Panels.Windows.WindowRegPanels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="{Binding Background, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        Title="{Binding Title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" d:DesignWidth="452" d:DesignHeight="295">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="gridPanels" ItemsSource="{Binding Panels, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                  SelectedItem="{Binding SelectedPanel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False"
                  CanUserResizeColumns="True" CanUserSortColumns="True" AutoGenerateColumns="False"
                  Margin="5" FrozenColumnCount="1" FontSize="12" Grid.Row="0" AlternatingRowBackground="LightGray"
                  RowDetailsVisibilityMode="Collapsed" IsReadOnly="True">
            <DataGrid.Resources>
                <Style x:Key="TextCenter" TargetType="{x:Type TextBlock}">
                    <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Margin" Value="1"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnExpandCollapse" Content="+" Click="btnExpandCollapse_Click_1" 
                                    Background="Transparent" Height="16" FontSize="9" Padding="0" Margin="0"
                                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Марка(атр)" Binding="{Binding MarkAtr}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="По формуле" Binding="{Binding MarkByFormula}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="Ошибки" Binding="{Binding ErrorStatus}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding ErrorStatusBackground}"/>
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding ErrorStatusDesc}" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="В базе" Binding="{Binding ExistsInBase}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="Длина" Binding="{Binding Length}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding LengthBackground}"/>
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding LengthDesc}" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Высота" Binding="{Binding Height}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding HeightBackground}"/>
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding HeightDesc}" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Толщина" Binding="{Binding Thickness}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding ThicknessBackground}"/>
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding ThicknessDesc}" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Опалубка" Binding="{Binding Formwork}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="Д" Binding="{Binding MountElement}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="Г" Binding="{Binding Prong}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="Б" Binding="{Binding BalconyDoor}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="П" Binding="{Binding BalconyCut}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="э" Binding="{Binding Electrics}" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="Ст." Binding="{Binding StepHeightIndex}" Width="Auto" ToolTipService.ToolTip="Высота ступени" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="шт." Binding="{Binding StepCount}"  Width="Auto" ToolTipService.ToolTip="Количество ступеней" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTextColumn Header="h" Binding="{Binding StepFirst}" Width="Auto" ToolTipService.ToolTip="Высота первой ступени" ElementStyle="{StaticResource TextCenter}"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Исключить" Command="{Binding Delete}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" Padding="5">
                        <DataGrid x:Name="gridPanels" ItemsSource="{Binding PanelsInModel}" 
                                  SelectedItem="{Binding SelectedPanel, UpdateSourceTrigger=PropertyChanged}"   
                                  Background="AliceBlue" CanUserAddRows="False" CanUserDeleteRows="False" 
                                  CanUserReorderColumns="False" CanUserResizeColumns="True" CanUserSortColumns="True"
                                  AutoGenerateColumns="False" Margin="5" FrozenColumnCount="1" FontSize="12" Grid.Row="0"
                                  AlternatingRowBackground="LightGray" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Марка(атр)" Binding="{Binding MarkAtr}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Background" Value="{Binding MarkAtrBackground}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Имя блока" Binding="{Binding BlockName}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Background" Value="{Binding BlockNameBackground}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Длина" Binding="{Binding Length}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Background" Value="{Binding LengthBackground}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Высота" Binding="{Binding Height}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Background" Value="{Binding HeightBackground}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Толщина" Binding="{Binding Thickness}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Background" Value="{Binding ThicknessBackground}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Масса" Binding="{Binding Weight}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Background" Value="{Binding WeightBackground}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Секция" Binding="{Binding Section}"/>
                                <DataGridTextColumn Header="Этаж" Binding="{Binding Floor}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <TextBlock Grid.Row="1" Text="{Binding SelectedPanel.Warning}" FontSize="12"                        
                   Background="WhiteSmoke" TextWrapping="WrapWithOverflow" Padding="5"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
            <TextBlock Text ="{Binding CountString}" Margin="2" VerticalAlignment="Center"/>
            <Label Margin="2" VerticalAlignment="Center">Серия:</Label>
            <ComboBox ItemsSource="{Binding Series}" SelectedItem="{Binding SelectedSerie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Margin="2" VerticalAlignment="Center"/>
            <Button Content="Зарегистрировать" Click="Registry" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
