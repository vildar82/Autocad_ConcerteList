<Window x:Class="Autocad_ConcerteList.Src.ConcreteDB.Panels.Windows.WindowCheckPanels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"     
        xmlns:local="clr-namespace:Autocad_ConcerteList.Src.ConcreteDB.Panels.Windows"
        mc:Ignorable="d"
        Background="{Binding Background}">
    <Window.Resources>        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="gridPanels" ItemsSource="{Binding Panels}" SelectedItem="{Binding SelectedPanel}"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False"
                  CanUserResizeColumns="True" CanUserSortColumns="True" AutoGenerateColumns="False"
                  Margin="5" FrozenColumnCount="1" FontSize="12" Grid.Row="0">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="FontSize" Value="12"/>                    
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Марка(атр)" Binding="{Binding MarkAtr}" IsReadOnly="True" />
                <DataGridTextColumn Header="По формуле" Binding="{Binding MarkByFormula}" IsReadOnly="True" />
                <DataGridTextColumn Header="В базе" Binding="{Binding ExistsInBase}" IsReadOnly="True" />
                <DataGridTextColumn Header="Имя блока" Binding="{Binding IsCorrectBlockName}" IsReadOnly="True" />
                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" IsReadOnly="True" />
                <DataGridTextColumn Header="Длина" Binding="{Binding Length}"  IsReadOnly="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding LengthBackground}"/>
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding LengthDesc}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Высота" Binding="{Binding Height}" IsReadOnly="False">
                    <DataGridTextColumn.ElementStyle>
                    <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding HeightBackground}"/>
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding HeightDesc}" />
                    </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Толщина" Binding="{Binding Thickness}" IsReadOnly="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding ThicknessBackground}"/>
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding ThicknessDesc}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Опалубка" Binding="{Binding Formwork}" IsReadOnly="True" />
                <DataGridTextColumn Header="Б" Binding="{Binding BalconyDoor}" IsReadOnly="True" />
                <DataGridTextColumn Header="П" Binding="{Binding BalconyCut}" IsReadOnly="True" />
                <DataGridTextColumn Header="э" Binding="{Binding Electrics}" IsReadOnly="True" />
                <DataGridTextColumn Header="Масса" Binding="{Binding Weight}" IsReadOnly="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding WeightBackground}"/>
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding WeightDesc}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" Padding="5" Background="WhiteSmoke">
                        <ListBox ItemsSource="{Binding PanelsInModel}" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical">
                                    </WrapPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>                                
                                        <Hyperlink Command="{Binding Show}">
                                            <TextBlock Text="{Binding Position}"/>
                                        </Hyperlink>
                                    </TextBlock>                                   
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>                        
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>        
        <TextBlock Grid.Row="1" Text="{Binding Path=SelectedPanel.Warning}" FontSize="12" 
                   Background="WhiteSmoke" TextWrapping="WrapWithOverflow" Padding="5"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="WhiteSmoke">
            <Label Content="{Binding CountRow, StringFormat={Строк }{0}}" Margin="2"/>
            <Label Content="{Binding CountBlocks, StringFormat={} Блоков {0}}" Margin="2"/>
        </StackPanel>        
    </Grid>
</Window>
